<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TwoWaitActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/two_wait_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/ttfirsneue_medium"
            android:gravity="center"
            android:text="@string/details"
            android:textColor="#171618"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arena_name_two_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ttfirsneue_medium"
                android:gravity="center"
                android:textColor="#171618"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:text="@string/free_times"
                    android:textColor="#171618"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateGone_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#171618"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/longitude_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#171618"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/txt_tadio_time_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/radiotextid_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="96dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#171618"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/edit_date_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#405CBF"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_vaqtYoq_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radio_btn"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/ushbu_sanada_bo_sh_vaqtlar_mavjud_emas"
                    android:textColor="#EC3131"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/det_maskEditTwo"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:maxLength="5"
                    android:visibility="gone"/>

                <com.jbvincey.nestedradiobutton.NestedConstraintRadioGroup
                    android:id="@+id/football_radioGr_two_wait"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:checkedButton="@+id/radioButton1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio1_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio2_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio3_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio4_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio5_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio6_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio7_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio8_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio9_two_wait"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />
                        </LinearLayout>

                    </LinearLayout>
                </com.jbvincey.nestedradiobutton.NestedConstraintRadioGroup>

                <TextView
                    android:id="@+id/test_txt_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/two_st_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_calendar_two_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="#75212121" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/location_txt_two_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ttfirsneue_medium"
                        android:gravity="center"
                        android:text="@string/location"
                        android:textColor="#171618"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/location_two_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location_txt_two_wait"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="15dp"
                        android:drawablePadding="5dp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:fontFamily="@font/ttfirsneue_regular"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/ic_location" />

                    <ImageView
                        android:id="@+id/img_location_two_wait"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="invisible"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_share_stadium" />

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="339dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="13dp">

                    <fragment
                        android:id="@+id/map_football_two_wait"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />

                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/arena_summa_two_wait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end|bottom"
                        android:fontFamily="@font/ttfirsneue_medium"
                        android:gravity="center"
                        android:textColor="#405CBF"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/two_wait_btn"
                        android:layout_width="169dp"
                        android:layout_height="57dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="35sp"
                        android:background="@drawable/btn_radius"
                        android:fontFamily="@font/andada"
                        android:text="@string/book_now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/two_wait_btn_off"
                        android:layout_width="169dp"
                        android:layout_height="57dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="35sp"
                        android:background="@drawable/btn_google"
                        android:fontFamily="@font/andada"
                        android:text="@string/book_now"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>