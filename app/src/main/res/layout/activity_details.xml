<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <RelativeLayout
        android:id="@+id/det_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/det_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ttfirsneue_medium"
            android:gravity="center"
            android:text="@string/details"
            android:textColor="#171618"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/det_favorite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/favorite_off"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/det_on_favorite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/favorite_on"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/det_relative">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="185dp"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="339dp"
                        android:layout_height="183dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:id="@+id/img_card_det"
                            android:layout_width="339dp"
                            android:layout_height="183dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop" />

                        <ProgressBar
                            android:id="@+id/progress_det_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/progress_background" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="339dp"
                        android:layout_height="183dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:id="@+id/img_card_det2"
                            android:layout_width="339dp"
                            android:layout_height="183dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <ProgressBar
                            android:id="@+id/progress_det_card2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/progress_background" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="339dp"
                        android:layout_height="183dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:id="@+id/img_card_det3"
                            android:layout_width="339dp"
                            android:layout_height="183dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <ProgressBar
                            android:id="@+id/progress_det_card3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/progress_background" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="339dp"
                        android:layout_height="183dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:id="@+id/img_card_det4"
                            android:layout_width="339dp"
                            android:layout_height="183dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <ProgressBar
                            android:id="@+id/progress_det_card4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/progress_background" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/arena_name_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ttfirsneue_medium"
                android:gravity="center"
                android:textColor="#171618"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_suv" />

                    <TextView
                        android:id="@+id/check1_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/ttfirsneue_regular"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_kvadrat" />

                    <TextView
                        android:id="@+id/dimensions_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/ttfirsneue_regular"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/ttfirsneue_regular"
                        android:text=""
                        android:textSize="14sp" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="#75212121" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:text="@string/free_times"
                    android:textColor="#171618"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/latitude_det"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#171618"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/longitude_det"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#171618"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/txt_tadio_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/radiotextid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="96dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#171618"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/edit_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:textColor="#405CBF"
                    android:textSize="16sp"
                    app:drawableEndCompat="@drawable/ic_arrow_down" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_vaqtYoq"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radio_btn"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/ushbu_sanada_bo_sh_vaqtlar_mavjud_emas"
                    android:textColor="#EC3131"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/det_maskEdit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:maxLength="5"
                    android:visibility="gone" />

                <com.jbvincey.nestedradiobutton.NestedConstraintRadioGroup
                    android:id="@+id/football_radioGr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:checkedButton="@+id/radioButton1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio1"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio2"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio3"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio4"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio5"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio6"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio7"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio8"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />

                            <com.jbvincey.nestedradiobutton.NestedRadioButton
                                android:id="@+id/football_radio9"
                                android:layout_width="109dp"
                                android:layout_height="34dp"
                                android:layout_margin="7dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:gravity="center"
                                android:textColor="@drawable/radio_text_color"
                                android:textSize="14sp"
                                android:visibility="gone"
                                app:clickableParent="@+id/l1" />
                        </LinearLayout>

                    </LinearLayout>
                </com.jbvincey.nestedradiobutton.NestedConstraintRadioGroup>

                <TextView
                    android:id="@+id/test_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="#75212121" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/arena_summa_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:fontFamily="@font/ttfirsneue_medium"
                        android:gravity="center"
                        android:textColor="#405CBF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/location_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/arena_summa_det"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="15dp"
                        android:drawablePadding="5dp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:fontFamily="@font/ttfirsneue_regular"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textSize="14sp"
                        app:drawableStartCompat="@drawable/users" />

                    <ImageView
                        android:id="@+id/img_location_del"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_below="@id/arena_summa_det"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_share_stadium" />

                </RelativeLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="339dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="13dp">

                    <fragment
                        android:id="@+id/map_football_det"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flo_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/colorBlue"
        android:src="@drawable/ic_arrow"
        tools:ignore="ContentDescription" />
</RelativeLayout>