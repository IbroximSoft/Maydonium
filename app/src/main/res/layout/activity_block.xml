<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlockActivity">

    <TextView
        android:id="@+id/block_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45sp"
        android:fontFamily="@font/ttfirsneue_medium"
        android:gravity="center"
        android:text="@string/siz_admin_tarafidan_bloklandingiz"
        android:textColor="@color/menu"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_text1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/ttfirsneue_medium"
        android:text="+998938032329"
        android:textColor="@color/menu"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/liner_block"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/block_text1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:background="@drawable/btn_radius_off">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/menu"
            android:background="@drawable/phone_block"
            tools:ignore="ContentDescription" />

    </LinearLayout>


</RelativeLayout>