<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stadium" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#405CBF</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimaryVariant">#92405CBF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">#92405CBF</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#405CBF</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimaryVariant">#92405CBF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">#92405CBF</item>
    </style>

    <style name="AppThemeLanguage" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#405CBF</item>
        <item name="android:statusBarColor">#405CBF</item>
        <item name="colorPrimaryVariant">#92405CBF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">#92405CBF</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small"></style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorControlNormal">#212121</item>
        <item name="colorControlActivated">#F44336</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:editTextColor">@color/menu</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>


</resources>